{
    "id": "com.lightwaverf",
    "version": "0.0.1",
    "compatibility": "0.x || 1.x",
    "category": ["appliances", "lights"],
    "name": {
        "en": "Lightwave RF",
		"nl": "Lightwave RF"
    },
    "description": {
		"en": "Give Homey the ability to control your LightwaveRF devices",
		"nl": "NA"
    },
    "author": {
        "name" : "Andy Wilde"
    },
    "images": {
		"large": "./assets/images/large.jpg",
		"small": "./assets/images/small.jpg"
    },
    "permissions": [
	    "homey:wireless:433"
    ],
    "drivers": [
	    {
		    "id": "lw200",
		    "name": {
				"en": "Wireless Dimmer",
			    "nl": "Wireless Dimmer"
		    },
		    "images": {
				"large": "../drivers/lw200/assets/images/large.png",
				"small": "../drivers/lw200/assets/images/small.png"
		    },
		    "class": "socket",
		    "capabilities": ["onoff"],
	    "pair": [
				{
			    	"id": "start"
			    },
				{
			    	"id": "remote1",
			    	"navigation": {
				    	"next": "remote_done",
				    	"prev": "start"
			    	}
			    },
				{
			    	"id": "remote_done"
			    }
		    ]
		},
		{
		    "id": "lw260",
		    "name": {
				"en": "Socket",
			    "nl": "Schakelaar"
		    },
		    "images": {
				"large": "../drivers/lw260/assets/images/large.png",
				"small": "../drivers/lw260/assets/images/small.png"
		    },
		    "class": "socket",
		    "capabilities": [ "onoff" ],
	    "pair": [
				{
			    	"id": "start"
			    },
			    {
			    	"id": "imitate1",
			    	"navigation": {
				    	"prev": "start"
			    	}
			    },
			    {
			    	"id": "imitate2",
			    	"navigation": {
						"next": "choose_slave",
				    	"prev": "imitate1"
			    	}
			    },
				{
			    	"id": "generate1",
			    	"navigation": {
				    	"next": "generate2",
				    	"prev": "start"
			    	}
			    },
				{
			    	"id": "generate2",
			    	"navigation": {
						"next": "choose_slave",
				    	"prev": "generate1"
			    	}
			    },
				{
					"id": "choose_slave",
					"template": "choose_slave",
					"navigation": {
						"next": "done"
					}
				},
				{
			    	"id": "done"
			    }
		    ]
		},
		{
		    "id": "lw301",
		    "name": {
				"en": "Plug in Dimmer",
			    "nl": "Plug in Dimmer"
		    },
		    "images": {
				"large": "../drivers/lw301/assets/images/large.png",
				"small": "../drivers/lw301/assets/images/small.png"
		    },
		    "class": "light",
		    "capabilities": [ "onoff", "dim" ],
	    "pair": [
				{
			    	"id": "start"
			    },
			    {
			    	"id": "imitate1",
			    	"navigation": {
				    	"prev": "start"
			    	}
			    },
			    {
			    	"id": "imitate2",
			    	"navigation": {
						"next": "choose_slave",
				    	"prev": "imitate1"
			    	}
			    },
				{
			    	"id": "generate1",
			    	"navigation": {
				    	"next": "generate2",
				    	"prev": "start"
			    	}
			    },
				{
			    	"id": "generate2",
			    	"navigation": {
						"next": "choose_slave",
				    	"prev": "generate1"
			    	}
			    },
				{
					"id": "choose_slave",
					"template": "choose_slave",
					"navigation": {
						"next": "done"
					}
				},
				{
			    	"id": "done"
			    }
		    ]
		},
		{
		    "id": "lw321",
		    "name": {
				"en": "Plug-in On/Off",
			    "nl": "Plug-in On/Off"
		    },
		    "images": {
				"large": "../drivers/lw321/assets/images/large.png",
				"small": "../drivers/lw321/assets/images/small.png"
		    },
		    "class": "light",
		    "capabilities": [ "onoff" ],
	    "pair": [
				{
			    	"id": "start"
			    },
			    {
			    	"id": "imitate1",
			    	"navigation": {
				    	"prev": "start"
			    	}
			    },
			    {
			    	"id": "imitate2",
			    	"navigation": {
						"next": "choose_slave",
				    	"prev": "imitate1"
			    	}
			    },
				{
			    	"id": "generate1",
			    	"navigation": {
				    	"next": "generate2",
				    	"prev": "start"
			    	}
			    },
				{
			    	"id": "generate2",
			    	"navigation": {
						"next": "choose_slave",
				    	"prev": "generate1"
			    	}
			    },
				{
					"id": "choose_slave",
					"template": "choose_slave",
					"navigation": {
						"next": "done"
					}
				},
				{
			    	"id": "done"
			    }
		    ]
		},
		{
		    "id": "lw400",
		    "name": {
				"en": "Wired Dimmer",
			    "nl": "Wired Dimmer"
		    },
		    "images": {
				"large": "../drivers/lw400/assets/images/large.png",
				"small": "../drivers/lw400/assets/images/small.png"
		    },
		    "class": "lights",
		    "capabilities": ["onoff", "dim"],
	    "pair": [
				{
			    	"id": "start"
			    },
			    {
			    	"id": "imitate1",
			    	"navigation": {
				    	"prev": "start"
			    	}
			    },
			    {
			    	"id": "imitate2",
			    	"navigation": {
						"next": "choose_slave",
				    	"prev": "imitate1"
			    	}
			    },
				{
			    	"id": "generate1",
			    	"navigation": {
				    	"next": "generate2",
				    	"prev": "start"
			    	}
			    },
				{
			    	"id": "generate2",
			    	"navigation": {
						"next": "choose_slave",
				    	"prev": "generate1"
			    	}
			    },
				{
					"id": "choose_slave",
					"template": "choose_slave",
					"navigation": {
						"next": "done"
					}
				},
				{
			    	"id": "done"
			    }
		    ]
		}
    ],
	"flow": {
	    "triggers": [
	        {
	            "id": "remoteOn",
	            "title": {
	                "en": "On is pressed on your remote"
	            },
	            "args": [
	                {
	                    "name": "device",
	                    "type": "device",
	                    "filter": "driver_id=lw200",
	                    "placeholder": { "en": "Which remote?", "nl": "Welke afstandbediening?" }
	                },
	                {
	                    "name": "channel",
	                    "type": "dropdown",
	                    "values": 	[ 
		                    { "id": "00", "label": { "en": "Channel: I" } },
		                    { "id": "01", "label": { "en": "Channel: II" } },
		                    { "id": "10", "label": { "en": "Channel: III" } }, 
		                    { "id": "11", "label": { "en": "Channel: IV" } }  
	                    ]
	                },
	                {
	                    "name": "unit",
	                    "type": "dropdown",
	                    "values": 	[ 
		                    { "id": "00", "label": { "en": "Button: 1" } },
		                    { "id": "01", "label": { "en": "Button: 2" } },
		                    { "id": "10", "label": { "en": "Button: 3" } }, 
		                    { "id": "11", "label": { "en": "Button: 4" } }, 
		                    { "id": "22", "label": { "en": "Button: G" } }
	                    ]
	                }
            	]
	        },
	        {
	            "id": "remoteOff",
	            "title": {"en": "Off is pressed on your remote" },
	            "args": [
	                {
	                    "name": "device",
	                    "type": "device",
	                    "filter": "driver_id=lw200",
	                    "placeholder": { "en": "Which remote?", "nl": "Welke afstandbediening?" }
	                },
	                {
	                    "name": "channel",
	                    "type": "dropdown",
	                    "values": 	[ 
		                    { "id": "00", "label": { "en": "Channel: I" } },
		                    { "id": "01", "label": { "en": "Channel: II" } },
		                    { "id": "10", "label": { "en": "Channel: III" } }, 
		                    { "id": "11", "label": { "en": "Channel: IV" } }  
	                    ]
	                },
	                {
	                    "name": "unit",
	                    "type": "dropdown",
	                    "values": 	[ 
		                    { "id": "00", "label": { "en": "Button: 1" } },
		                    { "id": "01", "label": { "en": "Button: 2" } },
		                    { "id": "10", "label": { "en": "Button: 3" } }, 
		                    { "id": "11", "label": { "en": "Button: 4" } }, 
		                    { "id": "22", "label": { "en": "Button: G" } }
	                    ]
	                }
            	]
	        }
		]
}	
	
}